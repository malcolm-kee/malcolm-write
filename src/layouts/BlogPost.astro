---
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogPost from '../components/BlogPost.astro';
import Footer from '../components/Footer.astro'


const { content } = Astro.props;
const { title, description, pubDate, author, heroImage, permalink, alt } = content;
---

<html lang={content.lang || 'en' }>

<head>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-lucario.css" />
	<BaseHead {title} {description} {permalink} date={pubDate} />
</head>

<body>
	<BlogHeader />
	<div class="wrapper">
		<BlogPost {title} {author} {heroImage} publishDate={pubDate} {alt}>
			<slot />
		</BlogPost>
	</div>
	<Footer />
</body>

</html>